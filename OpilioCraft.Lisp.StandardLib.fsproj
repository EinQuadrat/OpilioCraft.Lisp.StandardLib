<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <PackageId>OpilioCraft.Lisp.StandardLib</PackageId>
    <Version>2.0.0</Version>
    <Authors>Carsten Schäfer</Authors>
    <Description>Standard function library for OpilioCraft.Lisp.</Description>
    <Copyright>Copyright (c) 2022 by Carsten Schäfer</Copyright>
    <RepositoryUrl>https://github.com/EinQuadrat/OpilioCraft.Lisp.StandardLib.git</RepositoryUrl>
    <PackageTags>OpilioCraft;FSharp;LISP</PackageTags>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <DebugType>portable</DebugType>
    <RunAnalyzersDuringBuild>True</RunAnalyzersDuringBuild>
    <RunAnalyzersDuringLiveAnalysis>True</RunAnalyzersDuringLiveAnalysis>
    <EnableNETAnalyzers>True</EnableNETAnalyzers>
    <AnalysisLevel>latest</AnalysisLevel>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="SpecialSymbols.fs" />
    <Compile Include="TypeConstructors.fs" />
    <Compile Include="UnaryOperators.fs" />
    <Compile Include="BinaryOperators.fs" />
    <Compile Include="Functions.fs" />
    <Compile Include="Macros.fs" />
    <Compile Include="StandardLib.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="OpilioCraft.Lisp" Version="2.2.0" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="FSharp.Core" Version="6.0.3" />
  </ItemGroup>

</Project>
